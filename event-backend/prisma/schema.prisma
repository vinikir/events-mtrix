
generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  uuid      String   @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Event {
  id            Int      @id @default(autoincrement())
  uuid          String   @default(uuid())
  name          String
  price         Int
  maximumAmount Int
  halfPrice     Boolean
  image         String
  date          DateTime
  local         String
  sold          Int
  createdAt     DateTime @default(now())
   updatedAt DateTime @updatedAt
}